<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.library.dao.OrderMapper">
    <resultMap id="BaseResultMap" type="com.example.library.domain.Order">
        <id column="id" jdbcType="INTEGER" property="id"/>
        <result column="ordernumber" jdbcType="VARCHAR" property="ordernumber"/>
        <result column="account" jdbcType="VARCHAR" property="account"/>
        <result column="price" jdbcType="VARCHAR" property="price"/>
        <result column="address" jdbcType="VARCHAR" property="address"/>
        <result column="status" jdbcType="INTEGER" property="status"/>
        <result column="createtime" jdbcType="TIMESTAMP" property="createtime"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,ordernumber,account,price,address,status,createtime
    </sql>

    <insert id="insert" parameterType="com.example.library.domain.Order">
        insert into orderlists
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">id,</if>
            <if test="ordernumber != null">ordernumber,</if>
            <if test="account != null">account,</if>
            <if test="price != null">price,</if>
            <if test="address != null">address,</if>
            <if test="status != null">status,</if>
            <if test="createtime != null">createtime,</if>
        </trim>
        <trim prefix="values(" suffix=")" suffixOverrides=",">
            <if test="id != null">#{id},</if>
            <if test="ordernumber != null">#{ordernumber},</if>
            <if test="account != null">#{account},</if>
            <if test="price != null">#{price},</if>
            <if test="address != null">#{address},</if>
            <if test="status != null">#{status},</if>
            <if test="createtime != null">#{createtime},</if>
        </trim>
    </insert>

    <delete id="delete" parameterType="java.lang.Integer">
        DELETE from orderlists
        WHERE id = #{id}
    </delete>

    <update id="update" parameterType="com.example.library.domain.Order">
        update orderlists
        <set>
            <if test="ordernumber != null">ordernumber = #{ordernumber},</if>
            <if test="account != null">account = #{account},</if>
            <if test="price != null">price = #{price},</if>
            <if test="address != null">address = #{address},</if>
            <if test="status != null">status = #{status},</if>
            <if test="createtime != null">createtime = #{createtime},</if>
        </set>
        WHERE id = #{id}
    </update>

    <update id="updateStatus" parameterType="com.example.library.domain.Order">
        update orderlists
        <set>
            <if test="status != null">status = #{status},</if>
        </set>
        WHERE id = #{id}
    </update>

    <select id="findall" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"></include>
        from orderlists
    </select>

    <select id="findbyid" resultMap="BaseResultMap" parameterType="java.lang.Integer">
        select
        <include refid="Base_Column_List" />
        from orderlists
        WHERE id = #{id}
    </select>

</mapper>















